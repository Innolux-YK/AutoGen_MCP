{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Streamlit (module)",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "cwd": "${workspaceFolder}",
      "args": [
        "run",
        "frontend/main_app.py",
        "--server.port",
        "8502",
        "--logger.level",
        "debug"
      ],
      "justMyCode": true,
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Streamlit (attach)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      }
    }
  ]
}
